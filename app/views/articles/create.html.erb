
<%= form_with model: @article do |f| %>
  <div class="flex flex-col gap-5 max-w-xs">
    <%= f.text_field :title  %>
    <%= f.text_area :body %>
    <%= f.file_field :content , class:"file-input file-input-bordered file-input-primary w-full max-w-xs" %>

    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
